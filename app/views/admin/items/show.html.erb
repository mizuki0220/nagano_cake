<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <h3 class="bg-secondary text-center mb-5">商品詳細</h3>
    <div class="col-12 d-flex flex-nowrap">
    <%= image_tag @item.get_image, size: "400x300" %>
      <div class="col-12">
      <table>
        <tr>
          <div class="form-group">
            <th class="">商品名</th>
            <td><%= @item.name %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th>税込価格</th>
            <td><%= @item.price %>円</td>
          </div>
        </tr>
        <tr>
        <div class="form-group">
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success font-weight-bold">販売中</p>
            <% else %>
              <p class="text-danger font-weight-bold">販売停止中</p>
            <% end %>
          </td>
        </div>
        </tr>
      </table>
    </div>
  </div>
</div>