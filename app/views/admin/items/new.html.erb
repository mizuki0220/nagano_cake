<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-md-offset-2">
          <h4 class="col-md-3 bg-secondary mb-4">商品新規登録</h4>
          <%= form_with model: @item, local: true do |f| %>
            <%= f.label :商品画像 %>
            <%= f.file_field :images, multiple: true, id: 'images', class: "w-100" %>
            <div class="form-inline mt-3">
                <%= f.label :商品名 %>
                <%= f.text_field :name, class: "form-control ml-5" %>
            </div>
            <div class="form-inline mt-3">
                <%= f.label :商品説明 %>
                <%= f.text_area :introduction, class: "form-control ml-4" %>
            </div>
            <div class="form-inline mt-3">
                <%= f.label :ジャンル %>
                <%= f.collection_select :genre_id, Genre.all, :id, :name, :include_blank => "選択してください" %>
            </div>
            <div class="form-inline mt-3">
                <%= f.label :税抜価格 %>
                <%= f.text_field :price, class: "form-control ml-4" %>円
            </div>
            <div class="form-check form-check-inline is-invalid">
          　   <input class="form-check-input form-check-inline is-invalid " type="radio" name="is_active" id="category1" value="1" >
              <label class="form-check-label" for="category1">販売中</label>
            </div>
            <div class="text-center">
                <%= f.submit "新規登録", class: "btn btn-lg btn-info mt-3 mb-5" %>
            </div>
          <% end %>
        </div>
    </div>
</div>