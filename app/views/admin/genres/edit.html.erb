<div class="container">
  <div class="row　no-gutters">
    <div class="col-sm-12">

      <h2>ジャンル編集</h2>
      <% if @genre.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @genre.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @genre, url: admin_genre_path(@genre) do |f| %>
        <div class="form-group">
          <%= f.label :ジャンル名 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success", "data-disable-with": "Update User" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
