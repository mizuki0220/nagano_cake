<div class="container mt-5 mb-5">
    <div class="row mt-3 mb-5">
      <h2 class="bg-secondary">ジャンル一覧・追加</h2>
    </div>
    <% if @genre.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @genre.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-6 px-sm-0 mx-auto mb-5">
        <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class:"btn btn-success ml-4 py-1" %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 px-sm-0 mx-auto mb-5">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success py-0" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
