<div class="container mt-5 mb-5">
  <div class="row ml-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1 mb-3">
      <h2 class="col-4 bg-secondary text-center">会員情報編集</h2>
    </div>
  </div>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @customer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-8 offset-sm-1">
      <%= form_with model: @customer, local: true do |f| %>
        <table class="table table-borderless">
          <tr>
            <div class="form-group">
              <th>氏名</th>
              <td><%= f.text_field :first_name, placeholder:"令和" %></td>
              <td><%= f.text_field :last_name, placeholder:"花子" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :フリガナ %></th>
              <td><%= f.text_field :first_name_kana, placeholder:"レイワ" %></td>
              <td><%= f.text_field :last_name_kana, placeholder:"ハナコ" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :郵便番号 %></th>
              <td><%= f.text_field :postal_code, placeholder:"1001000" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :住所 %></th>
              <td><%= f.text_field :address, :size => "30", placeholder:"東京都渋谷区代々木神園町0-0" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :電話番号 %></th>
              <td><%= f.text_field :telephone_number, placeholder:"08012345678" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.text_field :email, placeholder:"sample@example.com" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th></th>
              <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
              <td><%= link_to "退会する", unsubscribe_customer_path, class: "btn btn-danger" %></td>
            </div>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>