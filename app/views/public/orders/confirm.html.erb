<div class="container mt-5 mb-5">
  <div class="row ml-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1 mb-3">
      <h2 class="col-4 bg-secondary text-center">注文情報確認</h2>
    </div>
  <div class="row">
    <div class="col-sm-7 offset-sm-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込み)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="align-middle" style="word-break:break-all"><%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %><%= cart_item.item.name %></td>
          </tr>
        </tbody>
  </div>

<p>支払い方法: <%= @order.pay_method == "credit_card" ? "クレジットカード" : "銀行振込" %></p>
<p>配送先住所: <%= @order.postal_code %> <%= @order.address %> (<%= @order.name %>)</p>
<p>送料: <%= number_to_currency(@order.shipping_fee) %></p>
<p>合計金額: <%= number_to_currency(@order.total_price) %></p>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :pay_method, value: @order.pay_method %>
  <%= f.hidden_field :shipping_fee, value: @order.shipping_fee %>
  <%= f.hidden_field :total_price, value: @order.total_price %>
  <%= f.submit "注文を確定する", class: "btn btn-primary" %>
<% end %>

<%= link_to "修正する", new_order_path, class: "btn btn-secondary" %>