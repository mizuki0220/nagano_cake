<div class="container px-5 px-sm-0 mt-5">
  <div class="row">
    <h2 class="bg-secondary text-center mb-5">配達先編集</h2>
  </div>
  <% if @address.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @address.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12 px-sm-0 mx-auto mb-5 d-flex justify-content-center">
      <%= form_with model: @address, local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <div class="form-group">
            <th>郵便番号(ハイフンなし)</th>
            <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :住所 %></th>
            <td><%= f.text_area :address, :size => "30", placeholder:"東京都新宿区西新宿2-8-1" %></td>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :宛名 %></th>
            <td><%= f.text_field :name, placeholder:"令和花子" %></td>
            <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
